<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".SearchActivity"
            android:exported="false" />
        <activity
            android:name=".MediaLibraryActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingsActivityB"
            android:exported="false" />
        <activity
            android:name=".SearchActivityB"
            android:exported="false" />
        <activity
            android:name=".MediaLibraryActivityB"
            android:exported="false" />
        <activity
            android:name=".MainActivityB"
            android:exported="true"/>

        <activity
            android:name=".SettingsActivityC"
            android:exported="false" />
        <activity
            android:name=".SearchActivityC"
            android:exported="false" />
        <activity
            android:name=".MediaLibraryActivityC"
            android:exported="false" />
        <activity
            android:name=".MainActivityC"
            android:exported="true"/>

        <activity
            android:name=".SettingsActivityA"
            android:exported="false" />
        <activity
            android:name=".SearchActivityA"
            android:exported="false" />
        <activity
            android:name=".MainActivityA"
            android:exported="true"/>
    </application>

    <queries>
        <package android:name="com.google.android.gm" />
        <package android:name="com.android.email" />
        <intent>
            <action android:name="android.intent.action.SENDTO" />
            <category android:name="android.intent.category.DEFAULT" />
        </intent>
    </queries>

</manifest>